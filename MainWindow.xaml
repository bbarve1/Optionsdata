<Window x:Class="CVD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CVD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="8"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- Badge style for Signal column -->
        <Style TargetType="TextBlock" x:Key="SignalBadge">
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding SignalType}" Value="ACCUMULATION_LONG">
                    <Setter Property="Background" Value="#E6F4EA"/>
                    <Setter Property="Foreground" Value="#0F7B36"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SignalType}" Value="BREAKOUT_LONG">
                    <Setter Property="Background" Value="#E8F0FE"/>
                    <Setter Property="Foreground" Value="#174EA6"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <!-- Toolbar -->
        <DockPanel Grid.Row="0" Grid.Column="0" LastChildFill="False" Margin="8">
            <Button Content="Start" Click="Start_Click"/>
            <Button Content="Stop" Click="Stop_Click"/>
            <Separator Width="16"/>
            <CheckBox x:Name="OnlyFNOCheck" Content="Scan F and O only" IsChecked="True" VerticalAlignment="Center"/>
            <Separator Width="16"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="SearchBox" Width="220"/>
            </StackPanel>
            <Button Content="Clear Signals" Click="ClearSignals_Click"/>
            <Button Content="Export CSV" Click="ExportCsv_Click"/>
        </DockPanel>
        <DataGrid  Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Right"  Width="auto" x:Name="mydict" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Symbol" Binding="{Binding Key}" />
                <DataGridTextColumn Header="Trading Symbol" Binding="{Binding Value}" />
            </DataGrid.Columns>
        </DataGrid>
        <!-- Signals Grid -->
        <DataGrid Grid.Row="1" Grid.Column="0"  ItemsSource="{Binding SignalsView}" x:Name="SignalsGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Time, StringFormat=HH:mm:ss}" Width="80"/>
                <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="160"/>
                <DataGridTextColumn Header="LTP" Binding="{Binding Ltp, StringFormat=F2}" Width="80"/>
                <DataGridTextColumn Header="VWAP" Binding="{Binding VWAP, StringFormat=F2}" Width="80"/>
                <DataGridTextColumn Header="CVD1m" Binding="{Binding Cvd1m}" Width="80"/>
                <DataGridTextColumn Header="Vol1m" Binding="{Binding Vol1m}" Width="80"/>
                <DataGridTextColumn Header="RecentHigh" Binding="{Binding RecentHigh, StringFormat=F2}" Width="100"/>
                <DataGridTextColumn Header="RecentLow" Binding="{Binding RecentLow, StringFormat=F2}" Width="100"/>
                <DataGridTemplateColumn Header="Signal" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SignalType}" Style="{StaticResource SignalBadge}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Log -->
        <TextBox Grid.Row="2" Grid.Column="0"  VerticalAlignment="Bottom" Height="50" x:Name="OutputTextBox" IsReadOnly="True"
          HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
          TextWrapping="NoWrap" FontFamily="Consolas" FontSize="12"/>
        
    </Grid>
</Window>
